<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".SecondActivity">

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Next"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="14dp"
        android:background="@drawable/btn_gradient"
        android:layout_marginHorizontal="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/main_cardview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="@id/btn_next"
        app:layout_constraintEnd_toEndOf="@id/btn_next"
        app:cardCornerRadius="24dp"
        android:layout_marginVertical="32dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/category_title"
                android:text="Category"
                android:paddingHorizontal="15dp"
                android:paddingVertical="4dp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/btn_fav"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_heart"
                android:background="@color/rose"
                android:padding="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/category_title"/>

            <TextView
                android:id="@+id/result_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore the nightlife of your\ncity"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_title"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="Free"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="26dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PriceðŸ’°"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintTop_toBottomOf="@id/txt_free"
                    app:layout_constraintStart_toStartOf="@id/txt_free"
                    app:layout_constraintEnd_toEndOf="@id/txt_free"
                    android:layout_marginStart="6dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="1dp">

                    <View
                        android:layout_width="84dp"
                        android:layout_height="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/ic_bar"
                        app:layout_constraintBottom_toTopOf="@id/txt_accessibility"
                        app:layout_constraintEnd_toEndOf="@id/txt_accessibility"
                        app:layout_constraintStart_toStartOf="@id/txt_accessibility" />

                    <TextView
                        android:id="@+id/txt_accessibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="26dp"
                        android:layout_marginBottom="14dp"
                        android:text="Accessibility"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/user_bg_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_one_user"/>

                    <View
                        android:layout_marginHorizontal="4dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_two_users"/>

                    <View
                        android:layout_marginEnd="4dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_three_users"/>

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_more_users"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Participants"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintTop_toBottomOf="@id/user_bg_container"
                    app:layout_constraintStart_toStartOf="@id/user_bg_container"
                    app:layout_constraintEnd_toEndOf="@id/user_bg_container"
                    android:layout_marginStart="6dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/filters_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/btn_next">

        <TextView
            android:id="@+id/txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/txt_category"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:hint="@string/type"
                android:focusable="false"
                android:cursorVisible="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txt_price"
            app:layout_constraintStart_toEndOf="@id/txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_marginStart="150dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/range_bar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/txt_price"
            app:layout_constraintTop_toBottomOf="@id/txt_price"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:values="@array/default_range"
            android:valueFrom="0"
            android:valueTo="1000" />

        <TextView
            android:id="@+id/txt_accessibility2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessibility"
            app:layout_constraintStart_toStartOf="@id/txt_price"
            app:layout_constraintTop_toBottomOf="@id/txt_price"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/range_accessibility"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_accessibility2"
            app:layout_constraintStart_toStartOf="@id/txt_accessibility2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:values="@array/default_range"
            android:valueFrom="0"
            android:valueTo="1000"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>